#CACHE_UPDATES=0
#FORCE_IPV4=1

[pacman-updates]
command=$SCRIPT_DIR/i3blocks/arch-update 
markup=pango
interval=3600
#LABEL=Updates:
QUIET=true
WATCH=^linux.* ^pacman.*
BASE_COLOR=#5fff5f
UPDATE_COLOR=#FFFF85
AUR=false
LABEL= 

# [click_apps]
# full_text=  
# command=wezterm

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
